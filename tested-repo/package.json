{
  "name": "interview-prep-tested",
  "version": "1.0.0",
  "description": "A fundamentally tested interview preparation application",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest run --coverage && open coverage/index.html",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "lint": "eslint src/ tests/",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check && npm run test:all",
    "dev": "vite",
    "build": "npm run validate && vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.50.0",
    "happy-dom": "^12.0.0",
    "msw": "^2.0.0",
    "playwright": "^1.40.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "fuse.js": "^7.0.0",
    "marked": "^11.0.0",
    "prismjs": "^1.29.0"
  }
}